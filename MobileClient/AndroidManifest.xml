        <activity
            android:name="pl.edu.agh.io.coordinator.MainMapActivity"
            android:label="@string/title_activity_main_map" >
        </activity>
        <activity
            android:name="pl.edu.agh.io.coordinator.CreateGroupActivity"
            android:label="@string/title_activity_create_group" >
